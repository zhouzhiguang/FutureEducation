<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <cn.bingoogolapple.qrcode.zxing.ZXingView
        android:id="@+id/zxingview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_animTime="1500"
        app:qrcv_borderColor="@android:color/white"
        app:qrcv_borderSize="@dimen/dp_1"
        app:qrcv_cornerColor="@color/bule_midlle"
        app:qrcv_cornerLength="@dimen/dp_20"
        app:qrcv_cornerSize="@dimen/dp_2"
        app:qrcv_isAutoZoom="true"
        app:qrcv_maskColor="#33FFFFFF"
        app:qrcv_rectWidth="@dimen/dp_240"
        app:qrcv_scanLineColor="@color/line1"
        app:qrcv_scanLineMargin="@dimen/dp_5"
        app:qrcv_scanLineSize="1dp"
        app:qrcv_topOffset="@dimen/dp_120"
        app:qrcv_verticalBias="0.5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_back"
        android:gravity="center"
        android:text="@string/qrcode"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>